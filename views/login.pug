extends master.pug
block content
    h2.text-center Connexion
    form.col-md-6.col-md-offset-3(method="post", action="/login")
        div(class="form-group")
            input(type="email" class="form-control" name="email" id="email" placeholder="Email")
        div(class="form-group")
            input(type="pass" class="form-control" name="pass" id="pass" placeholder="pass")
        div(class="form-group")
            a(href="auth/github/" class="btn btn-default") COnnexion avec Github
        button(type="submit" class="btn btn-default") OK
